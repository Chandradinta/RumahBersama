<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rumahbersama.Activity.TambahActivity"
    android:orientation="vertical"
    android:layout_margin="7dp">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah data Rumah Bersama"
        android:textSize="10pt"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan nama Rumah Bersama "
        android:minHeight="48dp" />


    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan  alamat Rumah Bersama"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_telepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan telepon Rumah Bersama"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan link foto Rumah Bersama"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_koordinat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan koordinat Rumah Bersama"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_simpan"
        android:text="Tambah Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>